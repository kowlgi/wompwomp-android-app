<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- customize here -->
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/WompwompActionBarStyle</item>
        <!--For compatibility-->
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="WompwompActionBarStyle" parent="AppTheme">
        <item name="android:background">@color/wompwompblue</item>
        <!-- color of title text -->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!-- color of the menu overflow icon (three vertical dots) -->
        <item name="android:textColorSecondary">@android:color/white</item>

        <!--For compatibility-->
        <item name="background">@color/wompwompblue</item>
    </style>
</resources>
